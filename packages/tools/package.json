{
  "name": "@slimfact/tools",
  "version": "0.1.0",
  "author": "Stefan van Herwijnen",
  "type": "module",
  "files": [
    "dist",
    "templates"
  ],
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./epc-qr": {
      "types": "./dist/types/epc-qr/index.d.ts",
      "import": "./dist/epc-qr/index.js"
    },
    "./peppol": {
      "types": "./dist/types/peppol/index.d.ts",
      "import": "./dist/peppol/index.js"
    },
    "./digiboox": {
      "types": "./dist/types/digiboox/index.d.ts",
      "import": "./dist/digiboox/index.js"
    },
    "./typst": {
      "types": "./dist/types/typst/index.d.ts",
      "import": "./dist/typst/index.js"
    },
    "./templates/invoice/*": {
      "import": "./templates/invoice/*"
    }
  },
  "scripts": {
    "build": "tsc",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "devDependencies": {
    "@myriaddreamin/typst-ts-node-compiler": "0.7.0-rc2",
    "@myriaddreamin/typst.ts": "0.7.0-rc2",
    "@types/iban": "^0.0.35",
    "@types/node": "^25.0.10",
    "csv-parse": "^6.1.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-vue": "10.7.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "@modular-api/fastify-checkout": "^0.5.4",
    "@myriaddreamin/typst-ts-renderer": "0.7.0-rc2",
    "@rgrove/parse-xml": "^4.2.0",
    "export-to-csv": "^1.4.0",
    "fast-xml-parser": "^5.3.3",
    "handlebars": "^4.7.8",
    "ibantools": "^4.5.1"
  }
}
