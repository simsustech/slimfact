{
  "name": "@slimfact/monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "run-s build:tools build:app build:api build:downloader",
    "build:app": "cd packages/app && pnpm run build:ssr",
    "build:api": "cd packages/api && pnpm run build",
    "build:downloader": "cd packages/downloader && pnpm run build",
    "build:tools": "cd packages/tools && pnpm run build",
    "format:check:api": "cd packages/api && pnpm run format:check",
    "format:check:app": "cd packages/app && pnpm run format:check",
    "format:check:downloader": "cd packages/downloader && pnpm run format:check",
    "format:check:tools": "cd packages/tools && pnpm run format:check",
    "format:write:api": "cd packages/api && pnpm run format:write",
    "format:write:app": "cd packages/app && pnpm run format:write",
    "format:write:downloader": "cd packages/downloader && pnpm run format:write",
    "format:write:tools": "cd packages/tools && pnpm run format:write",
    "format:check": "run-s format:check:app format:check:api format:check:downloader format:check:tools",
    "format:write": "run-s format:write:app format:write:api format:write:downloader format:write:tools",
    "version": "changeset version",
    "publish": "changeset publish",
    "lint:api": "cd packages/api && pnpm run lint",
    "lint:app": "cd packages/app && pnpm run lint",
    "lint:downloader": "cd packages/downloader && pnpm run lint",
    "lint:tools": "cd packages/tools && pnpm run lint",
    "lint": "run-s lint:api lint:app lint:downloader lint:tools",
    "test:api": "cd packages/api && pnpm run test",
    "test:e2e:api": "cd packages/api && pnpm run test:e2e",
    "test": "run-s test:api",
    "test:e2e": "run-s test:e2e:api"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "changesets": "^1.0.2",
    "git-conventional-commits": "^2.7.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.2",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint && pnpm run format:check",
    "commit-msg": "pnpm exec commitlint --edit $1"
  }
}
